import random as rd

couleurs = ["rouge", "bleu", "jaune", "vert", "blanc", "noir"]


def creer_code_secret():
    code_secret = []
    while len(code_secret) < 5:
        code_secret.append(couleurs[rd.randint(0, 5)])
    return code_secret


def comparer_code_secret_&couleur_de_joueur(couleur_de_joueur):
    couleur_du_joueur = list(input("Choisissez six couleur")
    if couleur_du_joueur == code_secret:
       print("CODE CORRECT!")
    else:
        print("CODE INCORRECT! Reessayez, le succes commence apres plusieurs echec"

